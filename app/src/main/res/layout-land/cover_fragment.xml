<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:id="@+id/imgvCover"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/cover_label"
        android:scaleType="fitCenter"
        android:transitionName="coverTransition"
        tools:src="@android:drawable/sym_def_app_icon" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtvPodcastTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:maxLines="2"
            android:textColor="?android:attr/textColorSecondary"
            android:textIsSelectable="true"
            tools:text="Podcast" />

        <TextView
            android:id="@+id/txtvEpisodeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="top|start"
            android:maxLines="3"
            android:textColor="?android:attr/textColorPrimary"
            android:textIsSelectable="true"
            tools:text="Episode" />
        <TextView

            android:id="@+id/txtvPubDate"
            style="@style/AntennaPod.TextView.ListItemSecondaryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|start"
            android:contentDescription="Published Date"
            android:maxLines="1"
            tools:background="@android:color/holo_green_dark"
            tools:text="Jan 1" />

        <TextView
            android:id="@+id/txtvEpisodeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="top|start"
            android:textColor="?android:attr/textColorSecondary"
            android:textIsSelectable="true"
            tools:text="Episode" />

    </LinearLayout>

</LinearLayout>
